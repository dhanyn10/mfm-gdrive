{
  "name": "mfm-gdrive",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "css": "npx @tailwindcss/cli -i ./css/input.css -o ./css/output.css --minify --watch",
    "css-gen": "npx @tailwindcss/cli -i ./css/input.css -o ./css/output.css --minify",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder --publish=never",
    "wdio": "wdio run ./wdio.conf.ts"
  },
  "build": {
    "appId": "com.dhanyn.mfmgdrive",
    "productName": "MFM GDrive",
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "asset/icon.png"
    }
  },
  "repository": "https://github.com/dhanyn10/mfm-gdrive.git",
  "author": {
    "name": "Dhany Nurdiansyah",
    "email": "dhanyn.dhan@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@tailwindcss/cli": "^4.1.16",
    "@wdio/cli": "^9.16.2",
    "@wdio/local-runner": "^9.16.2",
    "@wdio/mocha-framework": "^9.16.2",
    "@wdio/spec-reporter": "^9.16.2",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^4.1.16",
    "wdio-electron-service": "^9.1.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@google-cloud/local-auth": "^3.0.1",
    "bottleneck": "^2.19.5",
    "google-auth-library": "^10.1.0",
    "googleapis": "^164.1.0",
    "node-abi": "^4.14.0",
    "sweetalert2": "^11.14.3",
    "toastify-js": "^1.12.0"
  }
}
