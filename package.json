{
  "name": "mfm-gdrive",
  "version": "2.0.0",
  "main": "main.js",
  "scripts": {
    "start": "npm run css-gen && electron .",
    "css": "npx @tailwindcss/cli -i ./css/input.css -o ./css/output.css --minify --watch",
    "css-gen": "npx @tailwindcss/cli -i ./css/input.css -o ./css/output.css --minify",
    "app:build": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "app:dist": "electron-builder --publish=never",
    "wdio": "wdio run ./wdio.conf.ts"
  },
  "build": {
    "appId": "com.dhanyn.mfmgdrive",
    "productName": "MFM GDrive",
    "asar": true,
    "publish": [
      {
        "provider": "github",
        "owner": "dhanyn10",
        "repo": "mfm-gdrive"
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.code-workspace",
      "!LICENSE.md",
      "!package-lock.json",
      "!src/",
      "!e2e/",
      "!hooks/",
      "!angular.json",
      "!_config.yml",
      "!karma.conf.js",
      "!tsconfig.json",
      "!tslint.json",
      "!token.json",
      "!README.md"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "deb",
      "category": "Utility"
    }
  },
  "repository": "https://github.com/dhanyn10/mfm-gdrive.git",
  "author": {
    "name": "Dhany Nurdiansyah",
    "email": "dhanyn.dhan@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/cli": "^4.1.16",
    "@wdio/cli": "^9.24.0",
    "@wdio/local-runner": "^9.16.2",
    "@wdio/mocha-framework": "^9.16.2",
    "@wdio/spec-reporter": "^9.16.2",
    "electron": "^40.4.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^4.1.18",
    "wdio-electron-service": "^9.1.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@google-cloud/local-auth": "^3.0.1",
    "bottleneck": "^2.19.5",
    "google-auth-library": "^10.1.0",
    "googleapis": "^170.1.0",
    "node-abi": "^4.14.0",
    "toastify-js": "^1.12.0"
  }
}
